(declare-const |x'| Int)
(declare-const n Int)
(declare-const K Int)
(declare-const |y'| Int)
(assert (exists ((x?1 Int) (y?2 Int))
         (and (<= 0 (+ -1 y?2)) (<= 0 (+ x?1 (- y?2)))
                (<= 0 (+ (+ -1 n) (- x?1))) (= (- K) (- (+ |x'| (- x?1))))
                (= (- K) (- (+ |y'| (- y?2))))
