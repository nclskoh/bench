(declare-const k Int)
(declare-const K Int)
(declare-const |n'| Int)
(declare-const |i'| Int)
(assert (exists ((n?1 Int) (i?2 Int))
         (and (<= 0 (+ -1 n?1)) (<= 0 (+ -1 i?2))
                (<= 0 (+ (+ -1 (* 2 k)) (- i?2)))
                (= (- K) (- (+ |i'| (- i?2))))
                (<= (- K) (- (+ |n'| (- n?1)))) (<= 0 (+ |n'| (- n?1)))
                (or (and (= K 0) (= n?1 |n'|) (= i?2 |i'|)) (<= 1 K))
                (<= 0 K))))
(check-sat)
