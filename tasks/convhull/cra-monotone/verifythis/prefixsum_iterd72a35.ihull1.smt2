(declare-const x Int)
(declare-const |x'| Int)
(declare-const term_to_project_onto Real)
(assert (and (is_int (/ x 2)) (<= (- x) 0) (<= (+ (- x) 2) 0)
               (= (+ (ite (and (<= (- x) 0) (<= 0 x)) (mod x 2)
                          (+ (mod x 2) -2)) (* 2 |x'|) (- x)) 0)
               (= term_to_project_onto (+ |x'| (- x)))))
(check-sat)
